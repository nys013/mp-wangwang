/* miniprogram/pages/index/index.wxss */
.swiper-wrap{
  margin: 20rpx;
  border-radius: 20rpx;
  height: 400rpx;
  overflow: hidden;
}
.swiper-wrap .swiperImage{
  width: 100%;
  border-radius: 20rpx;
}

.content-wrap .title{
  display: flex;
  /* justify-content: space-around; */
}
.content-wrap .title .title-tab{
  width: 50%;
  text-align: center;
  margin: 10rpx;
  padding: 20rpx 0;
}
.content-wrap .title .active{
  border-bottom: 2px solid hotpink;
}
.content{
  display: flex;
  flex-wrap: wrap;
}
.content .content-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
}
.content .content-item image{
  width: 90%;
  height: 400rpx;
  align-self: center;
}
.content .content-item .message{
  margin: 5rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  color: hotpink;
}
.content .content-item .message .nickName{
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content .content-item .message .thumb{
  min-width: 60rpx;
  text-align: center;
}
